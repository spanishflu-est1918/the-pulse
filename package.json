{
  "name": "the-pulse",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@pulse/web",
    "dev:tui": "turbo dev --filter=@pulse/tui",
    "tui": "pnpm --filter @pulse/tui dev",
    "build": "turbo build",
    "lint": "turbo lint && biome lint --write --unsafe",
    "format": "biome format --write",
    "typecheck": "turbo typecheck",
    "test:run": "pnpm --filter @pulse/test-harness run cli:run",
    "test:compare": "pnpm --filter @pulse/test-harness run cli:compare"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "^22.8.6",
    "turbo": "^2.3.3",
    "typescript": "^5.6.3"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20"
  }
}
