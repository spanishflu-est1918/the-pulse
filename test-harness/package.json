    "nanoid": "^5.0.8",
    "dotenv": "^16.4.5",
    "zod": "^4.1.13",
    "commander": "^12.1.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "^22.8.6",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
